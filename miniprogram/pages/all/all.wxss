/* pages/all/all.wxss */
.title_box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 60rpx;
    background-color: #DCDCDC;
    padding-top: 5px;
    padding-bottom: 5px;
}
.box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 60rpx;
    background-color: #F5F5F5;
    padding-top: 5px;
    padding-bottom: 5px;
}
.little_box{
    display: flex;
    justify-content: center;
    width: 25%;
    font-size:30rpx;
}
.avatar{
    padding-left: 300rpx;
}


.circle[plain] {
    display: flex;
    margin-right: 40rpx;
    right: 0;
    position: fixed;
    bottom: 30%;
    padding: 0;
    border: none;
    width: 80rpx;
    height: 80rpx;
}
.image {
    width: 80rpx;
    height: 80rpx;
}